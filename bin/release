#!/bin/bash

version=v0.3.1

./bin/mkdist

git tag $version
git push --tags

github-release release \
    --user scythe-suite \
    --repo scythe-viewer-ng \
    --tag $version \
    --name "$1" \
    --description "$2" \

github-release upload \
    --user scythe-suite \
    --repo scythe-viewer-ng \
    --tag $version \
    --name site.tgz \
    --file ./release/site.tgz

github-release info \
    --user scythe-suite \
    --repo scythe-viewer-ng \
    --tag $version
